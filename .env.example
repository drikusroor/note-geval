# Authentication password
NOTES_AUTH_PASSWORD=your-secure-password

# Secret key for JWT signing (at least 8 characters)
JWT_SECRET=your-random-secret-at-least-8-chars

# Directory where notes are stored (relative to root or absolute)
# In Docker, this is usually mapped to /notes
NOTES_DIR=./example-notes

# Port the application will run on
PORT=3000

# Environment (development, production, test)
NODE_ENV=development
